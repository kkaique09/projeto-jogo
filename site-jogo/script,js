// Função simples que imprime uma mensagem no console
function saudacao() {
  console.log("Olá, mundo!");
}

// Para executar a função, você a chama pelo nome, seguido de parênteses
saudacao();



// Função que recebe dois números e os soma
function somar(a, b) {
  return a + b; // A palavra-chave "return" envia o resultado de volta
}

// Chamando a função com argumentos (5 e 8) e armazenando o resultado
let resultado = somar(5, 8);
console.log(resultado); // Saída: 13
